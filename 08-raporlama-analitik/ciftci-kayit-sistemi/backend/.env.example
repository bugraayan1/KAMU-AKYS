# Server Configuration
NODE_ENV=development
PORT=3003
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ciftci_kayit_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@ciftcikayit.gov.tr

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Agricultural Data APIs
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
SOIL_DATA_API_KEY=your_soil_api_key
MARKET_PRICE_API_URL=https://api.tarim.gov.tr/prices

# Geospatial Configuration
MAP_API_KEY=your_google_maps_api_key
DEFAULT_MAP_CENTER_LAT=39.0
DEFAULT_MAP_CENTER_LNG=35.0
DEFAULT_MAP_ZOOM=6

# Ministry Integration
TARIM_BAKANLIK_API_URL=https://api.tarim.gov.tr
TARIM_BAKANLIK_API_KEY=your_ministry_api_key
TKDK_API_URL=https://api.tkdk.gov.tr
TKDK_API_KEY=your_tkdk_api_key

# Payment and Subsidy Configuration
SUBSIDY_CALCULATION_API=https://api.destekleme.gov.tr
BANK_INTEGRATION_API=https://api.ziraatbank.com.tr
PAYMENT_VERIFICATION_KEY=your_payment_key

# SMS Configuration
SMS_API_URL=https://api.smsgateway.com
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=TARIM

# Satellite and Drone Integration
SATELLITE_IMAGE_API=https://api.sentinel-hub.com
SATELLITE_API_KEY=your_satellite_key
DRONE_DATA_ENDPOINT=https://api.dronedata.com

# IoT and Sensor Configuration
IOT_PLATFORM_URL=https://iot.platform.com
IOT_API_KEY=your_iot_key
SENSOR_DATA_INTERVAL=300000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Analysis Configuration
YIELD_PREDICTION_MODEL=./models/yield_predictor
DISEASE_DETECTION_MODEL=./models/disease_detector
CROP_RECOMMENDATION_ENGINE=./models/crop_recommender