# Server Configuration
NODE_ENV=development
PORT=3002
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kayip_kisi_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@kayipkisi.gov.tr

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=20971520
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Face Recognition Configuration
FACE_API_MODEL_URL=./models
FACE_MATCH_THRESHOLD=0.6
FACE_DETECTION_CONFIDENCE=0.5

# Geolocation Configuration
GEO_API_KEY=your_google_maps_api_key
DEFAULT_SEARCH_RADIUS=50
MAX_SEARCH_RADIUS=500

# External APIs
POLICE_API_URL=https://api.emniyet.gov.tr
POLICE_API_KEY=your_police_api_key
HOSPITAL_API_URL=https://api.saglik.gov.tr
HOSPITAL_API_KEY=your_hospital_api_key

# Notification Configuration
ALERT_RADIUS_KM=10
ALERT_EXPIRY_HOURS=72
MAX_ALERTS_PER_DAY=1000

# AI/ML Configuration
ML_MODEL_PATH=./models/missing_person_predictor
IMAGE_ANALYSIS_API=https://api.imageanalysis.com
IMAGE_ANALYSIS_KEY=your_image_analysis_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Report Configuration
REPORT_TEMPLATE_DIR=./templates
REPORT_OUTPUT_DIR=./reports