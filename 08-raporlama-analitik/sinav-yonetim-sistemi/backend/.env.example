# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sinav_yonetim_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@sinavyonetim.gov.tr

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Exam Configuration
EXAM_DURATION_DEFAULT=120
EXAM_PASS_SCORE=50
EXAM_MAX_ATTEMPTS=3
EXAM_COOLDOWN_HOURS=24

# QR Code Configuration
QR_CODE_SECRET=your_qr_secret_here
QR_CODE_EXPIRY=3600

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# External Services
OCR_API_KEY=your_ocr_api_key
PLAGIARISM_API_KEY=your_plagiarism_api_key
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.smsgateway.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_API_KEY=your_analytics_key

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000