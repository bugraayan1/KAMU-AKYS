# Server Configuration
NODE_ENV=development
PORT=3006
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sanal_muze_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@sanalmuze.gov.tr

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,tiff
ALLOWED_MODEL_TYPES=glb,gltf,obj,fbx,dae
ALLOWED_VIDEO_TYPES=mp4,webm,mov
ALLOWED_AUDIO_TYPES=mp3,wav,ogg

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.sanalmuze.gov.tr
CDN_UPLOAD_KEY=your_cdn_upload_key

# 3D Model Processing
MODEL_OPTIMIZATION_ENABLED=true
MODEL_COMPRESSION_LEVEL=7
TEXTURE_MAX_SIZE=2048
LOD_GENERATION=true

# Virtual Tour Configuration
TOUR_DEFAULT_QUALITY=high
TOUR_MAX_HOTSPOTS=50
TOUR_AUTOPLAY_DELAY=5000
PANORAMA_RESOLUTION=8192

# AR/VR Configuration
AR_ENABLED=true
AR_MARKER_TRACKING=true
VR_ENABLED=true
VR_HAND_TRACKING=false

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_API_KEY=your_analytics_key
HEATMAP_TRACKING=true
USER_BEHAVIOR_TRACKING=true

# AI/ML Configuration
AI_DESCRIPTION_API=https://api.ai-description.com
AI_API_KEY=your_ai_api_key
OBJECT_RECOGNITION_API=https://api.object-recognition.com
OBJECT_API_KEY=your_object_api_key

# Audio Guide Configuration
TTS_API_URL=https://api.tts-service.com
TTS_API_KEY=your_tts_api_key
TTS_DEFAULT_VOICE=tr-TR-Wavenet-A
AUDIO_GUIDE_LANGUAGES=tr,en,de,fr,ar

# Social Features
COMMENTS_ENABLED=true
RATINGS_ENABLED=true
SHARE_ENABLED=true
FAVORITES_ENABLED=true

# Educational Features
QUIZ_ENABLED=true
CERTIFICATE_GENERATION=true
GAMIFICATION_ENABLED=true
ACHIEVEMENT_SYSTEM=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# External Integrations
CULTURE_MINISTRY_API=https://api.kultur.gov.tr
CULTURE_API_KEY=your_culture_api_key
MUSEUM_NETWORK_API=https://api.museum-network.org
MUSEUM_API_KEY=your_museum_api_key