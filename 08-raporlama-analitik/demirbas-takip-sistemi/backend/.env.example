# Server Configuration
NODE_ENV=development
PORT=3008
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=demirbas_takip_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@demirbas.gov.tr

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Asset Configuration
ASSET_CODE_PREFIX=DMB
ASSET_CODE_LENGTH=10
DEPRECIATION_ENABLED=true
DEFAULT_DEPRECIATION_YEARS=5

# Barcode/QR Configuration
BARCODE_TYPE=CODE128
QR_CODE_SIZE=200
LABEL_PRINTER_API=https://api.labelprinter.com
LABEL_API_KEY=your_label_api_key

# RFID Configuration
RFID_ENABLED=false
RFID_READER_API=https://api.rfid-reader.com
RFID_API_KEY=your_rfid_api_key

# Location Tracking
LOCATION_TRACKING_ENABLED=true
GPS_UPDATE_INTERVAL=300000
GEOFENCE_ALERTS=true

# Maintenance Configuration
MAINTENANCE_REMINDER_DAYS=30
WARRANTY_EXPIRY_ALERT_DAYS=60
INSPECTION_INTERVAL_DAYS=365

# Integration APIs
ACCOUNTING_SYSTEM_API=https://api.accounting.gov.tr
ACCOUNTING_API_KEY=your_accounting_key
PROCUREMENT_SYSTEM_API=https://api.ihale.gov.tr
PROCUREMENT_API_KEY=your_procurement_key

# Reporting Configuration
REPORT_GENERATION_TIME=02:00
REPORT_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=730

# Notification Settings
NOTIFICATION_CHANNELS=email,sms,push
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=5

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Asset Categories
DEFAULT_CATEGORIES=IT,Furniture,Vehicle,Equipment,Tool
CUSTOM_CATEGORIES_ENABLED=true

# Disposal Configuration
DISPOSAL_APPROVAL_REQUIRED=true
DISPOSAL_WORKFLOW_STEPS=3
ARCHIVE_DISPOSED_ASSETS=true