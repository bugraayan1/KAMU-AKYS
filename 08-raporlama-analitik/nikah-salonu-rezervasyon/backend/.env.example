# Server Configuration
NODE_ENV=development
PORT=3007
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nikah_salonu_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@nikahsalonu.gov.tr

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Reservation Configuration
MIN_RESERVATION_DAYS=7
MAX_RESERVATION_DAYS=365
CEREMONY_DURATION_MINUTES=30
BUFFER_TIME_MINUTES=15
MAX_GUESTS_DEFAULT=100

# Working Hours
WEEKDAY_START=09:00
WEEKDAY_END=17:00
SATURDAY_START=09:00
SATURDAY_END=16:00
SUNDAY_ENABLED=false

# Payment Configuration
PAYMENT_ENABLED=true
PAYMENT_GATEWAY_URL=https://api.payment.com
PAYMENT_API_KEY=your_payment_key
PAYMENT_MERCHANT_ID=your_merchant_id
RESERVATION_FEE=500
CANCELLATION_FEE=100

# Government Integration
MERNIS_API_URL=https://api.nvi.gov.tr
MERNIS_API_KEY=your_mernis_api_key
EVLENME_API_URL=https://api.evlenme.gov.tr
EVLENME_API_KEY=your_evlenme_api_key

# Document Verification
DOCUMENT_VERIFICATION_API=https://api.document-verify.gov.tr
DOCUMENT_API_KEY=your_document_api_key

# Notification Settings
REMINDER_DAYS_BEFORE=7,3,1
SMS_NOTIFICATIONS=true
EMAIL_NOTIFICATIONS=true
WHATSAPP_NOTIFICATIONS=false

# Calendar Integration
GOOGLE_CALENDAR_ENABLED=true
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
OUTLOOK_CALENDAR_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Venue Configuration
DEFAULT_VENUES=1,2,3
VENUE_CAPACITY_CHECK=true
ACCESSIBILITY_FEATURES=true
PARKING_MANAGEMENT=true