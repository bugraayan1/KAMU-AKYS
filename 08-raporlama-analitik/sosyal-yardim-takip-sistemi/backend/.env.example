# Server Configuration
NODE_ENV=development
PORT=3005
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sosyal_yardim_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@sosyalyardim.gov.tr

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000
ENCRYPTION_KEY=your_encryption_key_here

# Government Integration
MERNIS_API_URL=https://api.nvi.gov.tr
MERNIS_API_KEY=your_mernis_api_key
ADRES_KAYIT_API_URL=https://adres.nvi.gov.tr
ADRES_KAYIT_API_KEY=your_adres_api_key

# Social Security Integration
SGK_API_URL=https://api.sgk.gov.tr
SGK_API_KEY=your_sgk_api_key
ISKUR_API_URL=https://api.iskur.gov.tr
ISKUR_API_KEY=your_iskur_api_key

# Bank Integration
BANK_API_URL=https://api.ziraatbank.com.tr
BANK_API_KEY=your_bank_api_key
BANK_MERCHANT_ID=your_merchant_id

# SMS Configuration
SMS_API_URL=https://api.smsgateway.com
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=SOSYALYRD

# Income Verification
GELIR_IDARESI_API_URL=https://api.gib.gov.tr
GELIR_IDARESI_API_KEY=your_gib_api_key
TAPU_API_URL=https://api.tkgm.gov.tr
TAPU_API_KEY=your_tapu_api_key

# Aid Calculation Parameters
MIN_INCOME_THRESHOLD=2500
MAX_INCOME_PER_PERSON=1500
BASE_AID_AMOUNT=1000
CHILD_AID_AMOUNT=250
DISABILITY_AID_MULTIPLIER=1.5
ELDERLY_AID_MULTIPLIER=1.3

# Reporting Configuration
REPORT_TEMPLATE_DIR=./templates
REPORT_OUTPUT_DIR=./reports
REPORT_RETENTION_DAYS=365

# Analytics Configuration
ANALYTICS_ENGINE_URL=https://analytics.engine.com
ANALYTICS_API_KEY=your_analytics_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION=730
SENSITIVE_DATA_ACCESS_LOG=true