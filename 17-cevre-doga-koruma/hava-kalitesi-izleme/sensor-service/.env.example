# Station Configuration
STATION_CODE=ANKARA-001

# MQTT Configuration
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Sensor Configuration
# PM2.5 Sensor
PM25_SENSOR_PORT=/dev/ttyUSB0
PM25_SENSOR_SERIAL=PM25-001
PM25_SENSOR_BAUD=9600

# PM10 Sensor
PM10_SENSOR_PORT=/dev/ttyUSB1
PM10_SENSOR_SERIAL=PM10-001
PM10_SENSOR_BAUD=9600

# Gas Sensor (Multi-gas)
GAS_SENSOR_PORT=/dev/ttyUSB2
GAS_SENSOR_SERIAL=GAS-001
GAS_SENSOR_BAUD=9600

# Weather Sensor
WEATHER_SENSOR_PORT=/dev/ttyUSB3
WEATHER_SENSOR_SERIAL=WEATHER-001
WEATHER_SENSOR_BAUD=9600

# Logging
LOG_LEVEL=info