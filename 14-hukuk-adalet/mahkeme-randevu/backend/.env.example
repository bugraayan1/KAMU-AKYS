# Uygulama Ayarları
NODE_ENV=development
PORT=3000
APP_NAME=Mahkeme Randevu Sistemi
APP_URL=http://localhost:3000

# Veritabanı Ayarları
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mahkeme_randevu_db
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Ayarları
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Ayarları
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRE=30d

# UYAP (Ulusal Yargı Ağı Projesi) Entegrasyonu
UYAP_API_URL=https://uyap.adalet.gov.tr/api
UYAP_API_KEY=your_uyap_api_key
UYAP_API_SECRET=your_uyap_secret
UYAP_WSDL_URL=https://uyap.adalet.gov.tr/wsdl/randevu

# E-Devlet Entegrasyonu
EDEVLET_API_URL=https://api.turkiye.gov.tr
EDEVLET_API_KEY=your_edevlet_api_key
EDEVLET_API_SECRET=your_edevlet_secret

# MERNİS Entegrasyonu
MERNIS_SERVICE_URL=https://tckimlik.nvi.gov.tr/Service/KPSPublic.asmx
MERNIS_USERNAME=your_mernis_username
MERNIS_PASSWORD=your_mernis_password

# Baro Entegrasyonu
BARO_API_URL=https://baro.adalet.gov.tr/api
BARO_API_KEY=your_baro_api_key
BARO_API_SECRET=your_baro_secret

# Bildirim Servisleri
SMS_PROVIDER=netgsm
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER=MAHKEME

# Push Notification
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# E-posta Ayarları
SMTP_HOST=smtp.adalet.gov.tr
SMTP_PORT=587
SMTP_USER=randevu@adalet.gov.tr
SMTP_PASS=your_email_password
EMAIL_FROM=Mahkeme Randevu Sistemi <randevu@adalet.gov.tr>

# CalDAV/iCal Entegrasyonu
CALDAV_SERVER=https://calendar.adalet.gov.tr
CALDAV_USERNAME=calendar_user
CALDAV_PASSWORD=calendar_password

# LDAP/Active Directory Entegrasyonu
LDAP_URL=ldap://adalet.gov.tr:389
LDAP_BIND_DN=cn=admin,dc=adalet,dc=gov,dc=tr
LDAP_BIND_CREDENTIALS=your_ldap_password
LDAP_SEARCH_BASE=ou=users,dc=adalet,dc=gov,dc=tr
LDAP_SEARCH_FILTER=(uid={{username}})

# Güvenlik Ayarları
ENCRYPTION_KEY=your_32_character_encryption_key
API_RATE_LIMIT=100
API_RATE_WINDOW=15
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30

# Randevu Ayarları
MIN_ADVANCE_BOOKING_HOURS=24
MAX_ADVANCE_BOOKING_DAYS=90
APPOINTMENT_DURATION_MINUTES=30
DAILY_APPOINTMENT_LIMIT=50
WEEKEND_APPOINTMENTS_ENABLED=false
HOLIDAY_APPOINTMENTS_ENABLED=false

# Mahkeme Mesai Saatleri
COURT_OPEN_TIME=09:00
COURT_CLOSE_TIME=17:00
LUNCH_BREAK_START=12:00
LUNCH_BREAK_END=13:00

# Dosya Yükleme Ayarları
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,png
UPLOAD_PATH=./uploads/documents

# QR Kod Ayarları
QR_CODE_BASE_URL=https://randevu.adalet.gov.tr/verify
QR_CODE_EXPIRY_HOURS=24

# Session Ayarları
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=1800000

# Log Ayarları
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Webhook URL'leri
WEBHOOK_URL=
WEBHOOK_SECRET=

# Tatil Günleri API
HOLIDAY_API_URL=https://api.resmitatiller.gov.tr
HOLIDAY_API_KEY=your_holiday_api_key

# Video Konferans Entegrasyonu (Uzaktan Duruşma)
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
TEAMS_TENANT_ID=your_teams_tenant_id
TEAMS_CLIENT_ID=your_teams_client_id
TEAMS_CLIENT_SECRET=your_teams_client_secret

# E-İmza Entegrasyonu
ESIGN_PROVIDER=aksis
ESIGN_API_URL=https://aksis.adalet.gov.tr/api
ESIGN_API_KEY=your_esign_api_key
ESIGN_CERTIFICATE_PATH=./certificates/

# Monitoring ve Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Backup Ayarları
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=mahkeme-randevu-backup
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1