# Uygulama Ayarları
NODE_ENV=development
PORT=3000
APP_NAME=Otopark Yönetim Sistemi
APP_URL=http://localhost:3000

# Veritabanı Ayarları
DB_HOST=localhost
DB_PORT=5432
DB_NAME=otopark_yonetim_db
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Ayarları
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# InfluxDB Ayarları (IoT sensör verileri için)
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influx_token
INFLUX_ORG=otopark_org
INFLUX_BUCKET=sensor_data

# JWT Ayarları
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRE=30d

# MQTT Broker (IoT cihazlar için)
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=otopark-backend

# Plaka Tanıma Servisi
PLATE_RECOGNITION_API_URL=http://localhost:5000
PLATE_RECOGNITION_API_KEY=your_api_key

# Ödeme Sistemi
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# E-Devlet Entegrasyonu
EDEVLET_API_URL=https://api.turkiye.gov.tr
EDEVLET_API_KEY=your_edevlet_api_key
EDEVLET_API_SECRET=your_edevlet_secret

# HGS/OGS Entegrasyonu
HGS_API_URL=https://hgs.kgm.gov.tr/api
HGS_API_KEY=your_hgs_api_key
HGS_API_SECRET=your_hgs_secret

# Bildirim Servisleri
SMS_PROVIDER=netgsm
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER=OTOPARK

# Push Notification
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# E-posta Ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Harita Servisleri
MAPBOX_API_KEY=your_mapbox_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Güvenlik Ayarları
ENCRYPTION_KEY=your_32_character_encryption_key
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# IoT Cihaz Ayarları
SENSOR_POLLING_INTERVAL=5000
CAMERA_STREAM_URL=rtsp://admin:password@camera-ip
BARRIER_CONTROL_URL=http://barrier-controller/api

# Fiyatlandırma (TL)
HOURLY_RATE=20
DAILY_MAX_RATE=100
MONTHLY_SUBSCRIPTION=500
DISCOUNT_RATE_DISABLED=0.5
DISCOUNT_RATE_VETERAN=0.75

# Session Ayarları
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=1800000

# Log Ayarları
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Modbus Ayarları (Bariyer kontrolü)
MODBUS_HOST=192.168.1.100
MODBUS_PORT=502

# Webhook URL'leri
WEBHOOK_URL=
WEBHOOK_SECRET=