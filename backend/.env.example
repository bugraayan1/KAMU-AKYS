# Environment
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mahkeme_randevu
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key
REFRESH_TOKEN_EXPIRES_IN=7d

# E-Devlet Integration
EDEVLET_AUTH_URL=https://giris.turkiye.gov.tr/oauth/authorize
EDEVLET_CLIENT_ID=your-edevlet-client-id
EDEVLET_CLIENT_SECRET=your-edevlet-client-secret
EDEVLET_SECRET=your-edevlet-secret

# UYAP Integration
UYAP_API_URL=https://uyap.adalet.gov.tr/api
UYAP_API_KEY=your-uyap-api-key
UYAP_API_SECRET=your-uyap-api-secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@mahkemerandevu.gov.tr
EMAIL_FROM_NAME=Mahkeme Randevu Sistemi
SUPPORT_EMAIL=destek@mahkemerandevu.gov.tr

# SMS Configuration
SMS_PROVIDER=netgsm
SMS_API_URL=https://api.netgsm.com.tr
SMS_USERNAME=your-sms-username
SMS_PASSWORD=your-sms-password
SMS_ORIGINATOR=ADALET

# Rate Limiting
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Session
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=1800000

# Security
BCRYPT_ROUNDS=10

# SSL (Production)
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=