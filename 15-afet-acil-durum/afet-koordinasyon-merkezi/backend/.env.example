# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/afet_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=afet_user
DB_PASSWORD=afet_password
DB_NAME=afet_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRY=30d

# Mapbox
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Afet Koordinasyon <noreply@afet.gov.tr>

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# API Keys
API_KEY=your-api-key-for-external-services
WEATHER_API_KEY=your-weather-api-key
EARTHQUAKE_API_KEY=your-earthquake-api-key

# WebSocket
SOCKET_IO_PATH=/socket.io

# Bull Queue
BULL_REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100