# Uygulama Ayarları
NODE_ENV=development
PORT=3000
APP_NAME=Temaslı Takip Sistemi
APP_URL=http://localhost:3000

# Veritabanı Ayarları
DB_HOST=localhost
DB_PORT=5432
DB_NAME=temasli_takip_db
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Ayarları
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Ayarları (Lokasyon verileri için)
MONGO_URI=mongodb://localhost:27017/temasli_takip_geo

# JWT Ayarları
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRE=30d

# E-Devlet Entegrasyonu
EDEVLET_API_URL=https://api.turkiye.gov.tr
EDEVLET_API_KEY=your_edevlet_api_key
EDEVLET_API_SECRET=your_edevlet_secret

# HSYS (Hastane Yönetim Sistemi) Entegrasyonu
HSYS_API_URL=https://hsys.saglik.gov.tr/api
HSYS_API_KEY=your_hsys_api_key
HSYS_API_SECRET=your_hsys_secret

# MERNİS Entegrasyonu
MERNIS_SERVICE_URL=https://tckimlik.nvi.gov.tr/Service/KPSPublic.asmx
MERNIS_USERNAME=your_mernis_username
MERNIS_PASSWORD=your_mernis_password

# Bildirim Servisleri
SMS_PROVIDER=netgsm
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER=SAGLIK

# Push Notification
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# Kafka Ayarları
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=temasli-takip-service
KAFKA_GROUP_ID=temasli-takip-group

# MQTT Ayarları (IoT cihazlar için)
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Harita Servisleri
MAPBOX_API_KEY=your_mapbox_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# QR Kod Ayarları
QR_CODE_BASE_URL=https://temasli.saglik.gov.tr/verify

# Güvenlik Ayarları
ENCRYPTION_KEY=your_32_character_encryption_key
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# Veri Saklama Süresi (gün)
CONTACT_DATA_RETENTION_DAYS=21
LOCATION_DATA_RETENTION_DAYS=14

# Session Ayarları
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=1800000

# Log Ayarları
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# E-posta Ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook URL'leri
WEBHOOK_URL=
WEBHOOK_SECRET=

# Blockchain Ayarları (Opsiyonel)
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK=
BLOCKCHAIN_CONTRACT_ADDRESS=